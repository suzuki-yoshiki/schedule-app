<% provide(:title, 'Schedule Show') %>
<h1>スケジュール詳細</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered" id="table-schedule">
        <tbody>
          <tr>
            <th class="active col-md-2"><%= Schedule.human_attribute_name :id %></th>
            <td class="col-md-10"><%= @schedule.id %></td>
          </tr>
          <tr>
            <th class="active"><%= Schedule.human_attribute_name :title %></th>
            <td><%= @schedule.title %></td>
          </tr>
          <tr>
            <th class="active"><%= Schedule.human_attribute_name :description %></th>
            <td>
              <%= @schedule.description %>
            </td>
          </tr>
          <tr>
            <th class="active"><%= Schedule.human_attribute_name :worked_on %></th>
            <td><%= @schedule.worked_on %></td>
          </tr>
          <tr>
            <th class="active"><%= Schedule.human_attribute_name :start_date %></th>
            <td><%= @schedule.start_date %></td>
          </tr>
          <tr>
            <th class="active"><%= Schedule.human_attribute_name :end_date %></th>
            <td><%= @schedule.end_date %></td>
          </tr>
          <tr>
            <th class="active"><%= Schedule.human_attribute_name :start_time %></th>
            <td><%= @schedule.start_time %></td>
          </tr>
          <tr>
            <th class="active"><%= Schedule.human_attribute_name :end_time %></th>
            <td><%= @schedule.end_time %></td>
          </tr>
        </tbody>
      </table>
      
      <div>
        <%= link_to '戻る', user_schedules_path, class: "btn btn-lg btn-default" %>
        <%= link_to "編集", edit_user_schedule_path(@user, @schedule), class: "btn btn-lg btn-success" %>
        <%= link_to "削除", user_schedule_path(@user, id:@schedule.id), method: :delete,
        data: { confirm: "「#{@schedule.title}」を削除します。よろしいですか？" }, class: "btn btn-lg btn-danger" %>
      </div>
    </div>    
  </div>