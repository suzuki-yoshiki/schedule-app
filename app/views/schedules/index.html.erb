<div class="row">
  <div id="calendar" class="col-md-6 col-md-offset-1">
    <p>スケジュール</p>
    <%= link_to 'New Schedule', new_user_schedule_path %>
  </div>

  <div class="col-md-3">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>worked_on</th>
          <th>Start time</th>
          <th>End time</th>
          <th>Start date</th>
          <th>End date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @schedules.each do |schedule| %>
          <tr>
            <td><%= schedule.title %></td>
            <td><%= schedule.description %></td>
            <td><%= schedule.worked_on %></td>
            <td><%= schedule.start_time %></td>
            <td><%= schedule.end_time %></td>
            <td><%= schedule.start_date %></td>
            <td><%= schedule.end_date %></td>
            <td><%= link_to 'Show', user_schedule_path(@user, schedule) %></td>
            <td><%= link_to 'Edit', edit_user_schedule_path(@user, schedule) %></td>
            <td><%= link_to 'Destroy', user_schedule_path(@user, id:schedule.id), method: :delete, data: { confirm: 'スケジュールの削除しますか？' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>


