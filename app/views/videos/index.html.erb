<% provide(:title, "Index Video") %>
<h1>動画学習</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-3">
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.body %></td>
      </tr>
      <tr>
        <td><iframe width="600" height="315" src="https://www.youtube.com/embed/<%= video.youtube_url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></td>
      <% if @user.teacher? %>
        <td><%= link_to '詳細', user_video_path(@user, video) %></td>
        <td><%= link_to '編集', edit_user_video_path(@user, video) %></td>
        <td><%= link_to '削除', user_video_path(id: video.id), method: :delete, data: { confirm: '削除しますか？' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>
<% if @user.teacher? %>
  <%= link_to '動画を追加する', new_user_video_path %>
<% end %>